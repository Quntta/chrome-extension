{
  "manifest_version": 3,
  "name": "Clipboard Modifier",
  "version": "1.0",
  "permissions": ["clipboardRead", "clipboardWrite", "contextMenus", "activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
