{
  "manifest_version": 3,
  "name": "img-download",
  "version": "1.0",
  "description": "A Chrome extension to fetch and display URL response.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "img-download/popup.html",
    "default_icon": {
      "16": "img-download/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    "download.html"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}
